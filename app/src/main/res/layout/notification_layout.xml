<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    style="@android:style/TextAppearance.StatusBar.EventContent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/blue">
        <ImageView
            android:id="@+id/imagenotileft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:contentDescription="@string/app_name"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/notiTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Custom Notification Title"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:maxLines="1"
                />

            <TextView
                android:id="@+id/notiDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Custom Notification Text"
                android:textColor="@color/white"
                android:maxLines="7"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="7dp"
                android:paddingRight="7dp">

                <TextView
                    android:id="@+id/notiInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="By"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/author"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/notiTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Heure : min"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/white"/>

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>