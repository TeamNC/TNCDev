<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/live_rootView"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_item"
    android:clickable="true"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:baselineAligned="false"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/beginning"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="120">
            <View
                android:id="@+id/Couleur_categorie"
                android:background="#990080ff"
                android:layout_width="4dp"
                android:layout_height="match_parent"
                />
            <ImageView
                android:contentDescription="@null"
                android:id="@+id/live_item"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/images6"
                android:layout_gravity="top"
                android:adjustViewBounds="true"
                android:background="#363632"
                android:layout_toRightOf="@id/Couleur_categorie"
                android:layout_toEndOf="@id/Couleur_categorie"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_weight="60"
            android:orientation="vertical"
            android:background="@color/white"
            >
                <TextView
                    android:id="@+id/live_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TITRE DE L'ARTICLE"
                    android:layout_marginTop="2.5dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:minLines="1"
                    android:ellipsize="none"
                    android:textColor="@color/black"
                    android:elegantTextHeight="false" />

                <LinearLayout
                    android:id="@+id/live_time_parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/live_title"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/live_time_icon"
                        android:contentDescription="@null"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_time_schedule"
                        android:scaleX="0.75"
                        android:scaleY="0.75"
                        />
                    <TextView
                        android:text="H-1.5"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:paddingStart="5dp"
                        />
                    <ImageView
                        android:id="@+id/live_tickets_icon"
                        android:contentDescription="@null"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_blue_tickets"

                        android:scaleX="0.75"
                        android:scaleY="0.75"
                        />
                    <TextView
                        android:text="50"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"

                        />
                    <ImageView
                        android:id="@+id/live_localisation_icon"
                        android:contentDescription="@null"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_place_blue"
                        android:scaleX="0.75"
                        android:scaleY="0.75"
                        />
                    <TextView
                        android:id="@+id/live_localisation_text"
                        android:text="Makepe"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/red"
                        android:ellipsize="end"
                        android:maxLines="01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/guestslive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/live_time_parent"
                    android:text="#stanleyenow#booba"
                    android:fontFamily="sans-serif"
                    android:textSize="15sp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    />
                <TextView
                    android:id="@+id/sponsorslive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/guestslive"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="#GUINNES#ORANGE#MTN"
                    />
              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_below="@id/live_time_parent"></LinearLayout>
                <TextView
                    android:id="@+id/nbrvue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.5k"
                    android:layout_below="@+id/sponsorslive"
                    android:layout_toLeftOf="@+id/live_pic_vue"
                    android:layout_toStartOf="@+id/live_pic_vue"
                    android:layout_alignParentBottom="true"
                    android:textColor="@color/black"
                    android:textSize="15sp"/>
                <ImageView
                    android:id="@+id/live_pic_vue"
                    android:contentDescription="@null"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX="0.75"
                    android:scaleY="0.75"
                    android:layout_below="@+id/sponsorslive"
                    android:src="@drawable/ic_live_vue"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    />

        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color"
        />

</LinearLayout>


