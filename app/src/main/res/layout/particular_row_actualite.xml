
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    card_view:cardCornerRadius="5dp">
    <RelativeLayout
        android:id="@+id/principal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <ImageView
            android:id="@+id/imgRow"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="170sp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:src="@drawable/serena_williams" />
        <TextView
            android:id="@+id/price"
            android:textColor="#000"
            android:background="#80FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
          android:padding="5dp"
            android:layout_margin="5dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:fontFamily="sans-serif"
            android:text="GRATUIT" />
        <RelativeLayout
            android:id="@+id/middle"
            android:layout_below="@+id/imgRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/live_time_parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/live_time_icon"
                        android:contentDescription="@null"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_time_schedule"
                        android:scaleX="0.75"
                        android:scaleY="0.75" />
                    <TextView
                        android:layout_gravity="center_vertical|start"
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date.Heure : min"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif"
                        android:textColor="#000" />
                    <ImageView
                        android:layout_gravity="center_vertical|center"
                        android:id="@+id/live_tickets_icon"
                        android:contentDescription="@null"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_blue_tickets"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:scaleX="0.75"
                        android:scaleY="0.75" />
                    <TextView
                        android:layout_gravity="center_vertical|center"
                        android:text="50"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <TextView
                    android:id="@+id/title_actualite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-2.5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:minLines="1"
                    android:ellipsize="none"
                    android:text="Titre"
                    android:layout_below="@+id/live_time_parent"/>
                <TextView
                    android:id="@+id/description_actualite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-2.5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/grey"
                    android:text="localisation"
                    android:maxLines="1"
                    android:textSize="15sp"
                    android:textStyle="italic"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif"
                    android:layout_below="@+id/title_actualite" />
            <android.support.v7.widget.AppCompatImageButton
                android:layout_gravity="center_vertical|center"
                android:id="@+id/add_favorite"
                android:contentDescription="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_favorite"
                android:scaleX="1.25"
                android:scaleY="1.25"
                android:tint="@color/md_blue_900"
                android:layout_marginRight="30dp"
                android:layout_marginEnd="30dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent" />
                <TextView
                    android:id="@+id/localisation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16k participants"
                    android:layout_margin="5dp"
                    android:fontFamily="sans-serif"
                    android:textSize="15sp"
                    android:textStyle="italic"
                    android:layout_below="@+id/description_actualite" />
        </RelativeLayout>
        <View
            android:id="@+id/line"
            android:layout_below="@+id/middle"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#CECECECE" />
        <RelativeLayout
            android:id="@+id/fotter"
            android:layout_below="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/line1"
                android:orientation="vertical"
                android:layout_width="3dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:background="#FF4081" />
            <TextView
                android:id="@+id/categories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="#Categories"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:textStyle="italic"
                android:fontFamily="sans-serif" />
          <RelativeLayout
              android:id="@+id/sharelove"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/lovePict"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    android:background="@null"
                    android:src="@drawable/selected_like"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:tint="@color/blue" />
              <TextView
                  android:id="@+id/nbrelove"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="1500"
                  android:textSize="15sp"
                  android:fontFamily="sans-serif"
                  android:layout_marginRight="2dp"
                  android:layout_marginEnd="2dp"
                  android:layout_centerVertical="true"
                  android:layout_toLeftOf="@+id/lovePict"
                  android:layout_toStartOf="@+id/lovePict" />
              <View
                  android:id="@+id/line3"
                  android:orientation="vertical"
                  android:layout_width="1px"
                  android:layout_height="60dp"
                  android:layout_marginRight="5dp"
                  android:layout_marginEnd="5dp"
                  android:layout_toLeftOf="@+id/nbrelove"
                  android:layout_toStartOf="@+id/nbrelove"
                  android:background="#CECECECE" />
              <ImageView
                  android:id="@+id/commentPict"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:src="@drawable/comments32"
                  android:layout_centerVertical="true"
                  android:layout_toLeftOf="@+id/line3"
                  android:layout_toStartOf="@+id/line3"
                  android:tint="@color/blue"/>
              <TextView
                  android:id="@+id/nbreCom"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="2000"
                  android:fontFamily="sans-serif"
                  android:layout_marginRight="2dp"
                  android:layout_marginEnd="2dp"
                  android:textSize="14sp"
                  android:textColor="#000"
                  android:layout_centerVertical="true"
                  android:layout_toLeftOf="@+id/commentPict"
                  android:layout_toStartOf="@+id/commentPict" />
              <View
                  android:id="@+id/line4"
                  android:orientation="vertical"
                  android:layout_width="1px"
                  android:layout_height="60dp"
                  android:layout_centerVertical="true"
                  android:layout_marginRight="5dp"
                  android:layout_marginEnd="5dp"
                  android:layout_toLeftOf="@+id/nbreCom"
                  android:layout_toStartOf="@+id/nbreCom"
                  android:background="#CECECECE" />
              <ImageView
                  android:id="@+id/share"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:background="@null"
                  android:layout_centerVertical="true"
                  android:src="@drawable/share32"
                  android:layout_toLeftOf="@+id/line4"
                  android:layout_toStartOf="@+id/line4"
                  android:tint="@color/blue"/>
              <View
                  android:id="@+id/line5"
                  android:orientation="vertical"
                  android:layout_width="1px"
                  android:layout_height="60dp"
                  android:layout_toLeftOf="@+id/share"
                  android:layout_toStartOf="@+id/share"
                  android:background="#CECECECE" />
          </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
