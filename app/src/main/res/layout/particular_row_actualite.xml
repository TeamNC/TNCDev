        <ImageView
            android:id="@+id/imgRow"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="170sp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:src="@drawable/serena_williams"
            />

        <TextView
            android:id="@+id/price"
            android:textColor="#000"
            android:background="#80FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
          android:padding="5dp"
            android:layout_margin="5dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:fontFamily="sans-serif"
            android:text="GRATUIT" />
        <!--</RelativeLayout>-->

        <RelativeLayout
            android:id="@+id/middle"
            android:layout_below="@+id/imgRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date.Heure : min"
                    android:layout_margin="5dp"
                    android:fontFamily="sans-serif"
                    android:textColor="#000"
                    />
                <TextView
                    android:id="@+id/title_actualite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-2.5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:minLines="1"
                    android:ellipsize="none"
                    android:text="Titre"
                    android:layout_below="@+id/date"
                    />
                <TextView
                    android:id="@+id/description_actualite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-2.5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="@string/lorem_ipsum"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif"
                    android:layout_below="@+id/title_actualite"
                    />

                <TextView
                    android:id="@+id/localisation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="localisation"
                    android:layout_margin="5dp"
                    android:fontFamily="sans-serif"
                    android:textSize="15sp"
                    android:textStyle="italic"
                    android:layout_below="@+id/description_actualite"
                    />
            </RelativeLayout>

        </RelativeLayout>

        <View
            android:id="@+id/line"
            android:layout_below="@+id/middle"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#CECECECE" />


        <RelativeLayout
            android:id="@+id/fotter"
            android:layout_below="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/line1"
                android:orientation="vertical"
                android:layout_width="4px"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:background="#FF4081" />
            <!--<View
