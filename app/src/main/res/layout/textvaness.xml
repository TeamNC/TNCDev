<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        card_view:cardCornerRadius="5dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="350sp">
        <ImageView
            android:id="@+id/imgRow"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="350sp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:src="@drawable/veste"
            />

        <TextView
            android:id="@+id/categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#Categories"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:textStyle="italic"
            android:fontFamily="sans-serif"
            android:textColor="@color/white"
            android:layout_alignParentTop="true"
            />
        <TextView
            android:id="@+id/price"
            android:textColor="#000"
            android:background="#80FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:fontFamily="sans-serif"
            android:text="GRATUIT" />

        <RelativeLayout
            android:id="@+id/principal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            >
            <RelativeLayout
                android:id="@+id/middle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/clock"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@null"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/ic_clock_white" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Date.Heure : min"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/white"
                        />

                </LinearLayout>
                    <TextView
                        android:id="@+id/title_actualite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-2.5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif"
                        android:includeFontPadding="false"
                        android:maxLines="1"
                        android:minLines="1"
                        android:ellipsize="none"
                        android:layout_below="@+id/days"
                        android:text="title"/>
                    <TextView
                        android:id="@+id/localisation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="localisation"
                        android:layout_margin="5dp"
                        android:fontFamily="sans-serif"
                        android:textSize="15sp"
                        android:textStyle="italic"
                        android:layout_below="@+id/title_actualite"
                        android:textColor="@color/white"
                        />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/fotter"
                android:layout_below="@+id/middle"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <ImageView
                    android:id="@+id/share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#22ff00"
                    android:src="@drawable/share32"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:tint="@color/white"/>
                <TextView
                    android:id="@+id/nbreshare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif"
                    android:layout_marginRight="2dp"
                    android:layout_marginEnd="2dp"
                    android:textColor="@color/white"
                    android:layout_toRightOf="@id/share"
                    android:layout_below="@id/share"/>
                <ImageView
                        android:id="@+id/lovePict"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@null"
                        android:background="@null"
                        android:src="@drawable/like_outline32"
                        android:tint="@color/white"
                        android:layout_toLeftOf="@+id/nbrelove"
                        android:layout_toStartOf="@+id/nbrelove"
                        />
                <TextView
                        android:id="@+id/nbrelove"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1500"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif"
                        android:layout_marginRight="2dp"
                        android:layout_marginEnd="2dp"
                        android:textColor="@color/white"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/lovePict"
                        android:layout_alignParentEnd="true"/>

            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>


    </LinearLayout>